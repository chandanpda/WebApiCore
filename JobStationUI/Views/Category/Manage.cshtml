@model JobCategoryModel
@inject IUnitOfWork unitOfWork
@{
    ViewBag.Title = "Job Category";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="dashboard_main">

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-12 col-lg-12">
                <div class="dashboard_main_heading">
                    <div class="heading_left">
                        @if (Model.Id > 0)
                        {
                            <h2>Update Category</h2>
                        }
                        else
                        {
                            <h2>Add Category</h2>
                        }

                    </div>
                    <div class="heading_right">
                        <a class="btn-main" asp-area="" asp-controller="Category" asp-action="Index">
                            <i class="fa fa-arrow-circle-left"></i> Back to Category List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="dashboard_main_body">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-md-12 col-lg-8">
                    <div class="website_settings">

                        <form method="post" asp-area="" asp-controller="Category" asp-action="Manage" id="AddUpdateBlogCategoryForm" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly"></div>
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="UniqueGuid" />

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Category Name*</label>
                                        <input type="text" class="form-control" asp-for="CategoryName" placeholder="Name*" />
                                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group text-center">
                                    <button type="submit" class="btn-main">Save</button>
                                </div>
                            </div>

                        </form>

                    </div>

                </div>

            </div>
        </div>

    </div>

</div>





