@model JobLocationModel
@inject IUnitOfWork unitOfWork
@{
    ViewData["Title"] = "Manage JobLocations";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="dashboard_main">

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-12 col-lg-12">
                <div class="dashboard_main_heading">
                    <div class="heading_left">
                        @if (Model.Id > 0)
                        {
                            <h2>Update Job Location</h2>
                        }
                        else
                        {
                            <h2>Add Job Location</h2>
                        }
                    </div>
                    <div class="heading_right">
                        <a class="btn-main" asp-area="" asp-controller="JobLocation" asp-action="Index" asp-route-projectGuid="@ViewBag.ProjectGuid">
                            <i class="fa fa-arrow-circle-left"></i> Back to Job Location List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="dashboard_main_body">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-md-12 col-lg-8">
                    <div class="website_settings">
                        <form asp-controller="JobLocation" asp-action="Manage" method="post" id="JobLocationForm" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly"></div>
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="UniqueGuid" />
                            @*<input type="hidden" asp-for="ProfilePicture" />
        <input type="hidden" asp-for="ProfilePictureWebp" />*@

                            <div class="row">

                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Location City*</label>
                                        <input type="text" placeholder="City*" class="form-control" asp-for="City">
                                        <span asp-validation-for="City" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">

                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Location State*</label>
                                        <input type="text" placeholder="State*" class="form-control" asp-for="State">
                                        <span asp-validation-for="State" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group text-center">
                                    <input type="submit" class="btn btn-main" value="Save" />
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
